检查配置文件 nginx -t
 重启 nginx -s reload
安装：
sudo yum install nginx
开机启动：
sudo systemctl enable nginx
启动：
sudo systemctl start nginx



### 配置文件
# For more information on configuration, see:
#   * Official English Documentation: http://nginx.org/en/docs/
#   * Official Russian Documentation: http://nginx.org/ru/docs/

user root;
worker_processes auto;
error_log /var/log/nginx/error.log;
pid /run/nginx.pid;

# Load dynamic modules. See /usr/share/doc/nginx/README.dynamic.
include /usr/share/nginx/modules/*.conf;

events {
    worker_connections 1024;
}

http {
    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;

    sendfile            on;
    tcp_nopush          on;
    tcp_nodelay         on;
    keepalive_timeout   65;
    types_hash_max_size 2048;
    client_max_body_size 15M;
    include             /etc/nginx/mime.types;
    default_type        application/octet-stream;

    # Load modular configuration files from the /etc/nginx/conf.d directory.
    # See http://nginx.org/en/docs/ngx_core_module.html#include
    # for more information.
    include /etc/nginx/conf.d/*.conf;
	
	limit_conn_log_level error;
	limit_conn_status 503;
	limit_conn_zone $binary_remote_addr zone=one:20m; #10m存储区
	limit_conn_zone $server_name zone=perserver:20m;
	limit_req_zone $binary_remote_addr zone=allips:100m   rate=1000r/s;   #其中$binary_remote_addr有时需要根据自己已有的log_format变量配置进行替换

  upstream town-web{
		server localhost:9001 weight=1 max_fails=3 fail_timeout=30s;
		server localhost:9002 down weight=1 max_fails=3 fail_timeout=30s;
	}
 
 upstream wiki.tacbin.club{
		server localhost:8181;
	}

    server {
        listen       80 default_server;
        listen       [::]:80 default_server;
        server_name  town.tacbin.club;
		    # limit_rate_after  1m; #单个用户下载了200k，就走限速
		    # limit_rate 4k;#(0字节表示不限速)
        # Load configuration files for the default server block.
        include /etc/nginx/default.d/*.conf;
        
        location  /wx/ {
          proxy_set_header            X-Forwarded-For $proxy_add_x_forwarded_for;
			    proxy_pass                  http://town-web;
        }
        
        location / {
        root         /root/html;
        }

        error_page 404 ../404.html;
            location = /40x.html {
            root         /root/html;
        }

        error_page 500 502 503 504 ../50x.html;
            location = /50x.html {
            root         /root/html;
        }
    }
	
	server{
 	  listen 80;
    server_name  api.tacbin.club;
		limit_conn  one  20; #每个ip并发连接为100                                        
		limit_conn perserver 1000; #总连接为1000，超过会拒绝
		limit_req   zone=allips  burst=5  nodelay;
		
		location / {
      proxy_set_header            X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_pass                  http://town-web;
		}
	}
 
  server{
  listen 80;
  server_name wiki.tacbin.club;
  limit_conn  one  20; #每个ip并发连接为100                                        
	limit_conn perserver 1000; #总连接为1000，超过会拒绝
	limit_req   zone=allips  burst=5  nodelay;
 
  location / {
    proxy_pass  http://wiki.tacbin.club;
  }
 }

# Settings for a TLS enabled server.
#
    server {
        listen       443 ssl http2 default_server;
        listen       [::]:443 ssl http2 default_server;
        server_name  _;
        root         /usr/share/nginx/html;

        ssl_certificate "/root/https/4604057_town.tacbin.club.pem";
        ssl_certificate_key "/root/https/4604057_town.tacbin.club.key";
        ssl_session_cache shared:SSL:1m;
        ssl_session_timeout  10m;
        ssl_ciphers HIGH:!aNULL:!MD5;
        ssl_prefer_server_ciphers on;

        # Load configuration files for the default server block.
        include /etc/nginx/default.d/*.conf;

        location / {
        root         /root/html;
        }

        error_page 404 /404.html;
            location = /40x.html {
            root         /root/html;
        }

        error_page 500 502 503 504 /50x.html;
            location = /50x.html {
            root         /root/html;
        }
    }

}


